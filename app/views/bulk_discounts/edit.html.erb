<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Discounts', merchant_bulk_discounts_path, class: 'link_1', style: 'pull_right' %>
    </ul>
  </nav>
</div>

<div id="update_form">
  <%= form_with url: merchant_bulk_discount_path(@merchant, @discount), method: :patch do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, value: @discount.name%>
    <%= form.label :discount, "Discount (as a decimal)" %>
    <%= form.number_field :discount, step: 'any', value: @discount.discount%>
    <%= form.label :threshold %>
    <%= form.number_field :threshold, value: @discount.threshold %>
    <%= form.submit "Update Discount" %>
  <% end %>
</div>